{
  "name": "clonelab-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspace=packages/core && npm run build --workspace=packages/web",
    "build:core": "npm run build --workspace=packages/core",
    "build:web": "npm run build --workspace=packages/web",
    "test": "npm run test --workspaces",
    "test:core": "npm run test --workspace=packages/core",
    "test:web": "npm run test --workspace=packages/web",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
